{
  "name": "aircraft-tracker-desktop",
  "version": "1.0.0",
  "description": "AircraftTracker Desktop - Real-time aircraft tracking and notifications",
  "homepage": ".",
  "scripts": {
  "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
  "start:react": "react-scripts start",
  "start:electron": "electron .",
  "build": "react-scripts build",
  "copy:electron": "node -e \"const fs=require('fs'); fs.copyFileSync('src/main/main.js','build/electron.js'); fs.copyFileSync('src/main/preload.js','build/preload.js'); console.log('âœ… Electron files copied')\"",
  "build:electron": "electron-builder",
  "package": "npm run build && npm run copy:electron && npm run build:electron"
},
"build": {
  "appId": "com.aircrafttracker.app",
  "productName": "AircraftTracker",
  "asar": true,
  "files": [
    "build/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "extraMetadata": {
    "main": "build/electron.js"
  },
  "win": {
    "target": "nsis"
  },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "asar": false,
    "extraMetadata": {
      "main": "build/electron.js"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "react-scripts": "5.0.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}